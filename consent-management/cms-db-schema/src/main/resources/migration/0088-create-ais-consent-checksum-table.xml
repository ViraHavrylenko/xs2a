<databaseChangeLog logicalFilePath="db.changelog-1.0.xml" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <include relativeToChangelogFile="true" file="_typedef.xml"/>

    <changeSet author="ske@adorsys.de" id="2019-11-29-1">
        <comment>Add sequence for ais_consent_checksum table</comment>

        <createSequence sequenceName="ais_consent_checksum_id_seq"/>
        <sql dbms="mariadb">CREATE SEQUENCE checksum_id_seq</sql>
    </changeSet>

    <changeSet author="ske@adorsys.de" id="2019-11-29-2">
        <comment>Create table ais_consent_checksum</comment>

        <createTable tableName="ais_consent_checksum">
            <column name="ais_consent_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="checksum" type="${blob.type}"/>
            <column name="checksum_type" type="VARCHAR(30)"/>
            <column name="values_order" type="INTEGER"/>
        </createTable>

        <addPrimaryKey tableName="ais_consent_checksum" columnNames="ais_consent_id, values_order" constraintName="ais_consent_checksum_pk"/>
        <addForeignKeyConstraint baseTableName="ais_consent_checksum" baseColumnNames="ais_consent_id" constraintName="fk_checksum_ais_consent" referencedTableName="ais_consent"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
