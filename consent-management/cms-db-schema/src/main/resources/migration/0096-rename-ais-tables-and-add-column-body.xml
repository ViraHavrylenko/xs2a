<databaseChangeLog logicalFilePath="db.changelog-1.0.xml" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <include relativeToChangelogFile="true" file="_typedef.xml"/>

    <changeSet author="ske@adorsys.de" id="2020-02-03-1">
        <renameTable oldTableName="ais_consent" newTableName="consent"/>
        <renameTable oldTableName="ais_consent_psu_data" newTableName="consent_psu_data"/>
        <renameTable oldTableName="ais_account_access" newTableName="account_access"/>
        <renameTable oldTableName="ais_aspsp_account_access" newTableName="aspsp_account_access"/>
    </changeSet>

    <changeSet author="ske@adorsys.de" id="2020-02-03-2">
        <comment>Add column for body to consent table</comment>

        <addColumn tableName="consent">
            <column name="body" type="${blob.type}"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>
